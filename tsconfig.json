{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@react-pdf/renderer/index.d.ts"
    ]
  },
  "files": [
    "./node_modules/@react-pdf/renderer/index.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/renderPdf.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts"
  ]
}
